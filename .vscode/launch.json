   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "name": "Serverless Debug",
         "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
         "windows": {
            "program": "${workspaceFolder}\\node_modules\\serverless\\bin\\serverless"
         },
         "args": [
            "offline",
            "start",
            "--stage",
            "dev"
         ],
         "skipFiles": [
            "<node_internals>/**"
         ],
         "sourceMaps": true,
         "cwd": "${workspaceFolder}",
         "localRoot": "${workspaceFolder}",
         "smartStep": true,
         "protocol": "inspector"
      }
   ]
}